{% extends "base.jinja2" %}

{% block style %}

{% endblock %}

{% block content %}
    <div class="mt-3 container">
        <div id="students">
            <div class="input-group mb-3">
                <input class="search form-control" type="text" placeholder="Search" aria-label="Search">
            </div>
            <div class="btn-group mb-3" role="group">
                <button class="sort btn btn-secondary" data-sort="name">이름</button>
                <button class="sort btn btn-secondary" data-sort="status">상태</button>
                <button class="sort btn btn-secondary" data-sort="status">클래스</button>
            </div>
           <ul class="list list-group">
               {% if students %}
               {% for student in students %}
               <li class="list-group-item">
                   <a href="/students/{{ student.id }}" class="name mr-2">
                       {{ student.name }}
                   </a>
                   {% if student.status %}
                   <span class="status badge badge-secondary badge-pill">{{ student.status }}</span>
                   {% endif %}
                   <div>
                       <small class="text-muted">클래스</small>
                       {% for class in student.classes %}
                       <span class="class badge badge-light">{{ class }}</span>
                       {% endfor %}
                   </div>
               </li>
               {% endfor %}
               {% endif %}
           </ul>
        </div>
    </div>
{% endblock %}

{% block script %}
    const options = {
        valueNames: ["name", "status", "class"]
    };

    var studentList = new List("students", options);
{% endblock %}
